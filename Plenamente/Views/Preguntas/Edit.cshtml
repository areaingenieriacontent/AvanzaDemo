@model Plenamente.Models.Pregunta

@{
    ViewBag.Title = "Edit";
    Layout = "~/Views/Shared/_LayoutAdministrador.cshtml";
}

<div class="colorVerdeBack">
    <p>Editar pregunta</p>
</div>
@using (Html.BeginForm())
{
    @Html.AntiForgeryToken()

    <div class="centrarContenido">
        @Html.ValidationSummary(true, "", new { @class = "text-danger" })
        @Html.HiddenFor(model => model.Preg_Id)

        <p>Titulo de la pregunta: </p>
        @Html.EditorFor(model => model.Preg_Titulo, new { htmlAttributes = new { } })
        @Html.ValidationMessageFor(model => model.Preg_Titulo, "", new { @class = "text-danger" })


        <div class="form-group">
            <label asp-for="CargoRegistro" class="col-md-4 control-label" hidden>@Html.EditorFor(model => model.Preg_Registro, new { htmlAttributes = new { @class = "form-control" } })</label>
        </div>

        <div class="form-group">
            <label asp-for="CargoRegistro" class="col-md-4 control-label" hidden> @Html.DropDownList("Encu_Id", null, htmlAttributes: new { @class = "form-control" })</label>
        </div>

        <input type="submit" value="Actualizar" class="btn btn-default" />

    </div>
}
<div class="contenidoVolver">
    <a href="@Url.Action("Index", "Preguntas", new {id = @ViewBag.idEncuesta , idEncuesta = @ViewBag.idEncuesta})" class="ayudaTitulos"><span>Volver a la lista</span> <img src="~/Imagenes/flecha-hacia-la-izquierda.png" /><p></p></a>
</div>


@section Scripts {
    @Scripts.Render("~/bundles/jqueryval")
}
