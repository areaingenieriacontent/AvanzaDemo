@model Plenamente.Models.ActiCumplimiento

@{
    ViewBag.Title = "Crear Actividad";
    Layout = "~/Views/Shared/_LayoutAdministrador.cshtml";
}

<div class="colorVerdeBack">
    <p>Crear una nueva Actividad</p>
</div>


@using (Html.BeginForm()) 
{
    @Html.AntiForgeryToken()
    
<div class="form-horizontal">

    @Html.ValidationSummary(true, "", new { @class = "text-danger" })

    <br />
    <br />
    <br />
    <div class="form-row">
        <div class="form-group col-md-6">
            <h5><b> Descripción:</b></h5>
            @Html.EditorFor(model => model.Acum_Desc, new { htmlAttributes = new { @class = "form-control" } })
            @Html.ValidationMessageFor(model => model.Acum_Desc, "", new { @class = "text-danger" })
        </div>

        <div class="form-group col-md-6">
            @Html.LabelFor(model => model.Acum_Porcentest, "Meta: (%)", htmlAttributes: new { @class = "control-label col-md-2", @TextAling= "left", @AutoSize="false"})
            @Html.EditorFor(model => model.Acum_Porcentest, new { htmlAttributes = new { @class = "form-control" } })
            @Html.ValidationMessageFor(model => model.Acum_Porcentest, "", new { @class = "text-danger" })
        </div>
    </div>
    <div class="form-group">
        @*Campo de Registro oculto*@
        <label asp-for="AcumRegistro" class="col-md-4 control-label" hidden>@Html.DisplayFor(Model => Model.Acum_Registro)</label>
    </div>
    <div class="form-row">
        <div class="form-group col-md-6">
            @Html.LabelFor(model => model.Id, "Responsable:", htmlAttributes: new { @class = "control-label col-md-2" })
            @Html.DropDownList("Id", null, htmlAttributes: new { @class = "estilosSelect" })
            @Html.ValidationMessageFor(model => model.Id, "", new { @class = "text-danger" })
        </div>

        <div class="form-group col-md-6">
            @Html.LabelFor(model => model.Oemp_Id, "Objetivo de la empresa:", htmlAttributes: new { @class = "control-label col-md-6" })
            @Html.DropDownList("Oemp_Id", null, htmlAttributes: new { @class = "estilosSelect" })
            @Html.ValidationMessageFor(model => model.Oemp_Id, "", new { @class = "text-danger" })
        </div>
    </div>
    <div class="form-row">
        <div class="form-group col-md-6">
            @Html.LabelFor(model => model.Empr_Nit, "Empresa:", htmlAttributes: new { @class = "control-label col-md-3" })
            @Html.DropDownList("Empr_Nit", null, htmlAttributes: new { @class = "estilosSelect" })
            @Html.ValidationMessageFor(model => model.Empr_Nit, "", new { @class = "text-danger" })
        </div>

        <div class="form-group col-md-6">
            @Html.LabelFor(model => model.Frec_Id, "Frecuencia de la actividad:", htmlAttributes: new { @class = "control-label col-md-6" })
            @Html.DropDownList("Frec_Id", null, htmlAttributes: new { @class = "estilosSelect" })
            @Html.ValidationMessageFor(model => model.Frec_Id, "", new { @class = "text-danger" })
        </div>
    </div>
    <div class="form-row">
        <div class="form-group col-md-6">
            @Html.LabelFor(model => model.Acum_IniAct, "Inicio de actividad:", htmlAttributes: new { @class = "control-label col-md-4" })
            @Html.EditorFor(model => model.Acum_IniAct, new { htmlAttributes = new { @class = "form-control" } })
            @Html.ValidationMessageFor(model => model.Acum_IniAct, "", new { @class = "text-danger" })
        </div>
        <div class="form-group col-md-6">
            @Html.LabelFor(model => model.Acum_FinAct, "Finalización de actividad:", htmlAttributes: new { @class = "control-label col-md-6" })
            @Html.EditorFor(model => model.Acum_FinAct, new { htmlAttributes = new { @class = "form-control" } })
            @Html.ValidationMessageFor(model => model.Acum_FinAct, "", new { @class = "text-danger" })
        </div>
    </div>
    <div class="form-row">
        <div class="form-group col-md-6">
            @Html.LabelFor(model => model.Peri_Id, "Periodo - (Año):", htmlAttributes: new { @class = "control-label col-md-4" })
            @Html.DropDownList("Peri_Id", null, htmlAttributes: new { @class = "estilosSelect" })
            @Html.ValidationMessageFor(model => model.Peri_Id, "", new { @class = "text-danger" })
        </div>
        <div class="form-group col-md-6">
            @Html.LabelFor(model => model.Acum_Ejec, "Cargue Evidencia", htmlAttributes: new { @class = "control-label col-md-4" })
            @Html.EditorFor(model => model.Acum_Ejec, new { htmlAttributes = new { @class = "form-control" } })
            @Html.ValidationMessageFor(model => model.Acum_Ejec, "", new { @class = "text-danger" })
        </div>
    </div>
    <div class="form-group">
        <div class="col-md-offset-2 col-md-10">
            <input type="submit" value="Create" class="btn btn-default" />
        </div>
    </div>
</div>
    }

    <div>
        @Html.ActionLink("Back to List", "Index")
    </div>

    @section Scripts {
        @Scripts.Render("~/bundles/jqueryval")
    }
