@model Plenamente.Models.ProcesActividad

@{
    ViewBag.Title = "Edit";
    Layout = "~/Views/Shared/_LayoutAdministrador.cshtml";
}

<div class="colorVerdeBack">
    <p>Editar actividad o proceso</p>
</div>


@using (Html.BeginForm())
{
    @Html.AntiForgeryToken()

    <div class="centrarContenido">
        <hr />
        @Html.ValidationSummary(true, "", new { @class = "text-danger" })
        @Html.HiddenFor(model => model.Pact_Id)

        <div class="form-group">
            <div class="col-md-10">
                Nombre del proceso o actividad
                <br />
                <br />
                @Html.EditorFor(model => model.Pact_Nombre, new { htmlAttributes = new { @class = "form" } })
                @Html.ValidationMessageFor(model => model.Pact_Nombre, "", new { @class = "text-danger" })
                <br />
                <br />
            </div>
        </div>

        <div class="form-group">
            @*Campo de Registro oculto*@
            <label asp-for="ActividadRegistro" class="col-md-4 control-label" hidden>@Html.DisplayFor(Model => Model.Pact_Registro)  </label>
        </div>


        <div class="form-group">
            <div class="col-md-offset-2 col-md-10">

                <input type="submit" value="Guardar" class="btn btn-default" />
            </div>
        </div>
    </div>
}

<div class="contenidoVolver">
    <a href="@Url.Action("Index", "ProcesActividads")" class="ayudaTitulos"><span>Volver a la lista</span> <img src="~/Imagenes/flecha-hacia-la-izquierda.png" /><p></p></a>
</div>

@section Scripts {
    @Scripts.Render("~/bundles/jqueryval")
}
