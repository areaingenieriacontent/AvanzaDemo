@model Plenamente.Models.ObjEmpresa

@{
    ViewBag.Title = "Edit";
    Layout = "~/Views/Shared/_LayoutAdministrador.cshtml";
}

<div class="colorVerdeBack">
    <p>
        Editar Objetivo
        <a href="#" class="ayudaTitulos"><span style="width: 300px">Aquí podrá editar el nombre y la descripción del objetivo seleccionado. </span> <img src="~/Imagenes/informacion.png" style="max-height:18px; max-width:18px;" /></a>
    </p>
</div>


@using (Html.BeginForm())
{
    @Html.AntiForgeryToken()

    <div class="centrarContenido">
        <hr />
        @Html.ValidationSummary(true, "", new { @class = "text-danger" })
        @Html.HiddenFor(model => model.Oemp_Id)

        <div class="form-group">
            <div class="col-md-10">
                Nombre
                <a href="#" class="ayudaTitulos"><span style="width: 300px;">Aquí editará el nombre del objetivo (ej. objetivo 1, Cumplimiento Planear, etc.). </span> <img src="~/Imagenes/informacionfndo.png" style="max-height:18px; max-width:18px;" /></a>
                @Html.EditorFor(model => model.Oemp_Nombre, new { htmlAttributes = new { @class = "" } })
                @Html.ValidationMessageFor(model => model.Oemp_Nombre, "", new { @class = "text-danger" })
            </div>
        </div>

        <div class="form-group">
            <div class="col-md-10">
                Descripción
                <a href="#" class="ayudaTitulos"><span style="width: 300px;">Aquí podrá actualizar de manera detallada el objetivo planeteado. </span> <img src="~/Imagenes/informacionfndo.png" style="max-height:18px; max-width:18px;" /></a>
                @Html.TextAreaFor(model => model.Oemp_Descrip, new { @class = "", @style = "margin: 0px -146.75px 0px 0px;height: 123px;width: 547px;" })
                @Html.ValidationMessageFor(model => model.Oemp_Descrip, "", new { @class = "text-danger" })
            </div>
        </div>

        <div class="form-group">
            @*Campo de Registro oculto*@
            <label asp-for="ReglahigieneRegistro" class="col-md-4 control-label" hidden>@Html.DisplayFor(Model => Model.Oemp_Meta)  </label>
        </div>

        <div class="form-group">
            <div class="col-md-10">
                <label asp-for="CargoRegistro" class="col-md-4 control-label" hidden>  @Html.DropDownList("Empr_Nit", null, htmlAttributes: new { @class = "form-control" })</label>
            </div>
        </div>

        <div class="form-group">
            @*Campo de Registro oculto*@
            <label asp-for="ReglahigieneRegistro" class="col-md-4 control-label" hidden>@Html.DisplayFor(Model => Model.Oemp_Registro)  </label>
        </div>


        <br />

        <br />

        <input type="submit" value="Guardar" class="btn btn-default" />

    </div>
}

<div class="contenidoVolver">
    <a href="@Url.Action("Index", "objempresas")" class="ayudaTitulos"><span>Volver a la lista</span> <img src="~/Imagenes/flecha-hacia-la-izquierda.png" /><p></p></a>
</div>


@section Scripts {
    @Scripts.Render("~/bundles/jqueryval")
}
