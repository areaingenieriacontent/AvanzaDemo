@model Plenamente.Models.CargoEmpresa

@{
    ViewBag.Title = "Create";
    Layout = "~/Views/Shared/_LayoutAdministrador.cshtml";
}

<div class="colorVerdeBack">
    <p>Crear un nuevo cargo</p>
</div>

@using (Html.BeginForm())
{
    @Html.AntiForgeryToken()

<div class="centrarContenido">
    @Html.ValidationSummary(true, "", new { @class = "text-danger" })
    <p>Cargo:</p>
    <br />
    @Html.EditorFor(model => model.Cemp_Nom, new { htmlAttributes = new { } })
    <br />
    @Html.ValidationMessageFor(model => model.Cemp_Nom, "", new { @class = "text-danger" })
    <br />
    @*<p>Nit:</p>*@
    <br />
        <label hidden> @Html.DropDownList("Empr_Nit", null, htmlAttributes: new { @class = "estilosSelect" }) </label>
    <br />
        <label hidden> @Html.ValidationMessageFor(model => model.Empr_Nit, "", new { @class = "text-danger" }) </label>
    <br />
    <div class="form-group">
        @*Campo de Registro oculto*@
        <label asp-for="CargoRegistro" class="col-md-4 control-label" hidden>@Html.DisplayFor(Model => Model.Cemp_Registro)  </label>
    </div>
    <input type="submit" value="Crear" />
</div>
}


<div class="contenidoVolver">
    <a href="Index" class="ayudaTitulos"><span>Volver a la lista</span> <img src="~/Imagenes/flecha-hacia-la-izquierda.png" /><p></p></a>
</div>

@section Scripts {
    @Scripts.Render("~/bundles/jqueryval")
}
