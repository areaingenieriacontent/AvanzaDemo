@model Plenamente.Models.CargoEmpresa

@{
    ViewBag.Title = "Edit";
    Layout = "~/Views/Shared/_LayoutAdministrador.cshtml";
}

<div class="colorVerdeBack">
    <p>Editar cargo</p>
</div>
<div class="centrarContenido">
    @using (Html.BeginForm())
    {
        @Html.AntiForgeryToken()

        <div class="form-horizontal">
            @Html.ValidationSummary(true, "", new { @class = "text-danger" })
            @Html.HiddenFor(model => model.Cemp_Id)

            <div class="form-group">
                @*@Html.LabelFor(model => model.Cemp_Nom, htmlAttributes: new { @class = "control-label col-md-2" })*@
                <p> Nombre del Cargo </p>
                <div class="col-md-10">
                    @Html.EditorFor(model => model.Cemp_Nom, new { htmlAttributes = new { @class = "" } })
                </div>
            </div>

            <div class="form-group">
                <label hidden> @Html.LabelFor(model => model.Empr_Nit, "Empr_Nit", htmlAttributes: new { @class = "control-label col-md-2" }) </label>
                <div class="col-md-10">
                    <label hidden>   @Html.DropDownList("Empr_Nit", null, htmlAttributes: new { @class = "form-control" }) </label>
                    <label hidden>  @Html.ValidationMessageFor(model => model.Empr_Nit, "", new { @class = "text-danger" }) </label>
                </div>
                </div>

            <div class="form-group">
                @*Campo de Registro oculto*@
                <label asp-for="CargoRegistro" class="col-md-4 control-label" hidden>@Html.DisplayFor(Model => Model.Cemp_Registro)  </label>
            </div>

            <div class="form-group">
                <div class="col-md-offset-2 col-md-10">
                    <input type="submit" value="Guardar" class="btn btn-default" />
                </div>
            </div>
        </div>
    }


</div>

<div class="contenidoVolver">
    <a href="@Url.Action("Index", "CargoEmpresas")" class="ayudaTitulos"><span>Volver a la lista</span> <img src="~/Imagenes/flecha-hacia-la-izquierda.png" /><p></p></a>
</div>

@section Scripts {
    @Scripts.Render("~/bundles/jqueryval")
}
