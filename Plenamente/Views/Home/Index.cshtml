@model IEnumerable<Plenamente.Models.ViewModel.EventViewModel>

@{
    ViewBag.Title = "Index";
    Layout = "~/Views/Shared/_LayoutAdministrador.cshtml";
}

<section class="contenidoSection">
    <div class="contenidoDiv">
        @*Seccion de graficos*@
        <div style=" border: solid 2px;border-color: #929292;margin: 20px;padding: 40px;">
            <p style=" font-size: 22px;font-weight: bolder;"><img src="~/Imagenes/home1.png" style="width: 3%;" />Medición del sistema</p>
            <section class="graficosSection" style="">
                <div class="row">
                    <div class="col-lg-4 col-md-4 col-sm-12 col-xs-12">
                        <button type="button" class="" data-toggle="modal" data-target="#myModal">
                            <canvas id="chartPromedio" class="chart-container marco" chart-route="../Indicadores/PromedioAutoevaluaciones" chart-type="horizontalBar"></canvas>
                        </button>
                    </div>

                    <!-- Modal -->
                    <div id="myModal" class="modal fade" role="dialog">
                        <div class="modal-dialog">

                            <!-- Modal content-->
                            <div class="modal-content">
                                <div class="modal-header">
                                    <button type="button" class="close" data-dismiss="modal">&times;</button>
                                    <h4 class="modal-title">Medición del ciclo PHVA</h4>
                                </div>
                                <canvas id="chartPromedioModal" class="chart-container marco" chart-route="../Indicadores/PromedioAutoevaluaciones" chart-type="horizontalBar"></canvas>
                                <div class="modal-footer">
                                    <button type="button" class="btn btn-default" data-dismiss="modal">Cerrar</button>
                                </div>
                            </div>

                        </div>
                    </div>


                    <div class="col-lg-4 col-md-4 col-sm-12 col-xs-12">
                        <button type="button" class="" data-toggle="modal" data-target="#myModal2">
                            <canvas id="chartAvance" class="chart-container marco" chart-route="../Indicadores/AvanceAutoevaluaciones" chart-type="line"></canvas>
                        </button>
                    </div>


                    <!-- Modal -->
                    <div id="myModal2" class="modal fade" role="dialog">
                        <div class="modal-dialog">

                            <!-- Modal content-->
                            <div class="modal-content">
