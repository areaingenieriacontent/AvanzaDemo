                                    <button type="button" class="close" data-dismiss="modal">&times;</button>
                                    <h4 class="modal-title">Alcance del plan de trabajo anual</h4>
                                </div>
                                <canvas id="chartAvanceModal" class="chart-container marco" chart-route="../Indicadores/AvanceAutoevaluaciones" chart-type="line"></canvas>
                                <div class="modal-footer">
                                    <button type="button" class="btn btn-default" data-dismiss="modal">Cerrar</button>
                                </div>
                            </div>

                        </div>
                    </div>

                    <div class="col-lg-4 col-md-4 col-sm-12 col-xs-12">
                        <button type="button" class="" data-toggle="modal" data-target="#myModal3">
                            <canvas id="chartUltima" class="chart-container marco" chart-route="../Indicadores/UltimaAutoevaluacion" chart-type="pie"></canvas>
                        </button>
                    </div>
                    <!-- Modal -->
                    <div id="myModal3" class="modal fade" role="dialog">
                        <div class="modal-dialog">

                            <!-- Modal content-->
                            <div class="modal-content">
                                <div class="modal-header">
                                    <button type="button" class="close" data-dismiss="modal">&times;</button>
                                    <h4 class="modal-title">Cumplimiento SG-SST</h4>
                                </div>
