@model Plenamente.Models.SedeCiudad

@{
    ViewBag.Title = "Create";
    Layout = "~/Views/Shared/_LayoutAdministrador.cshtml";
}

<div class="colorVerdeBack">
    <p>Crear Una Nueva Sede</p>
</div>


@using (Html.BeginForm())
{
    @Html.AntiForgeryToken()

    <div class="centrarContenido">
        Nombre De La Sede: 
        <br />
        @Html.EditorFor(model => model.Sciu_Nom, new { htmlAttributes = new { @class = "" } })
        <br />
        <br />
        Ciudad:
        <br />
        @Html.DropDownList("Ciud_Id", null, htmlAttributes: new { @class = "estilosSelect" })
        <br />

        <div class="form-group">
            <label>  @Html.DropDownList("Empr_Nit", null, htmlAttributes: new { @class = "form-control" })</label>
</div>

        <div class="form-group">
            @*Campo de Registro oculto*@
            <label asp-for="SedeRegistro" class="col-md-4 control-label" hidden>@Html.DisplayFor(Model => Model.Sciu_Registro)  </label>
        </div>

                <input type="submit" value="Create" class="btn btn-default" />

    </div>
}

<div class="contenidoVolver">
    <a href="Index" class="ayudaTitulos"><span>Volver a la lista</span> <img src="~/Imagenes/flecha-hacia-la-izquierda.png" /><p></p></a>
</div>

@section Scripts {
    @Scripts.Render("~/bundles/jqueryval")
}
