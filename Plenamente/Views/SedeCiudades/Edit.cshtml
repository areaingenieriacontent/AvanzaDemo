@model Plenamente.Models.SedeCiudad

@{
    ViewBag.Title = "Edit";
    Layout = "~/Views/Shared/_LayoutAdministrador.cshtml";
}

<div class="colorVerdeBack">
    <p>Editar Sede</p>
</div>
@using (Html.BeginForm())
{
    @Html.AntiForgeryToken()
    
    <div class="centrarContenido">
        @Html.ValidationSummary(true, "", new { @class = "text-danger" })
        @Html.HiddenFor(model => model.Sciu_Id)

        Nombre De La Sede:
        <br />
        <br />
                @Html.EditorFor(model => model.Sciu_Nom, new { htmlAttributes = new { @class = "" } })
                @Html.ValidationMessageFor(model => model.Sciu_Nom, "", new { @class = "text-danger" })
        <br />
        <br />
        Ciudad:
        <br />
        <br />
                @Html.DropDownList("Ciud_Id", null, htmlAttributes: new { @class = "estilosSelect" })
                @Html.ValidationMessageFor(model => model.Ciud_Id, "", new { @class = "text-danger" })

        <div class="form-group">
                <label hidden>@Html.DropDownList("Empr_Nit", null, htmlAttributes: new { @class = "form-control" })</label>
        </div>
        <div class="form-group">
            <label hidden>    @Html.EditorFor(model => model.Sciu_Registro, new { htmlAttributes = new { @class = "form-control" } })</label>
        </div>

                <input type="submit" value="Guardar" class="btn btn-default" />

    </div>
}

<div class="contenidoVolver">
    <a href="@Url.Action("Index", "SedeCiudades")" class="ayudaTitulos"><span>Volver a la lista</span> <img src="~/Imagenes/flecha-hacia-la-izquierda.png" /><p></p></a>
</div>

@section Scripts {
    @Scripts.Render("~/bundles/jqueryval")
}
