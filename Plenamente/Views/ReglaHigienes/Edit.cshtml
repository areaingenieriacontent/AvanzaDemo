@model Plenamente.Models.ReglaHigiene

@{
    ViewBag.Title = "Edit";
    Layout = "~/Views/Shared/_LayoutAdministrador.cshtml";
}

<div class="colorVerdeBack">
    <p>Editar Reglamento de higiene </p>
</div>

<div class="centrarContenido">
    @using (Html.BeginForm())
    {
        @Html.AntiForgeryToken()

        <div class="form-horizontal">
            <h4>Reglamento de higiene</h4>
            <hr />
            @Html.ValidationSummary(true, "", new { @class = "text-danger" })
            @Html.HiddenFor(model => model.Rhig_Id)

            <div class="form-group">
                Nombre del reglamento de higiene
                <div class="col-md-10">
                    @Html.EditorFor(model => model.Rhig_Nom, new { htmlAttributes = new { @class = "form-control" } })
                    @Html.ValidationMessageFor(model => model.Rhig_Nom, "", new { @class = "text-danger" })
                </div>
            </div>

            <div class="form-group">
                Subir Nuevo Archivo
                <div class="col-md-10">
                    @Html.TextBoxFor(Model => Model.Rhig_Archivo, new { @class = "form-control", @type = "file" })
                </div>
            </div>

            <div class="form-group">
                <div class="col-md-10">
                    <label asp-for="Rhig_Registro" class="col-md-4 control-label" hidden>  @Html.DropDownList("Empr_Nit", null, htmlAttributes: new { @class = "form-control" })</label>
                </div>
            </div>

            <div class="form-group">
                <div class="col-md-offset-2 col-md-10">
                    <input type="submit" value="Guardar" class="btn btn-default" />
                </div>
            </div>
        </div>
    }
</div>
<div class="contenidoVolver">
    <a href="@Url.Action("Index", "ReglaHigienes")" class="ayudaTitulos"><span>Volver a la lista</span> <img src="~/Imagenes/flecha-hacia-la-izquierda.png" /><p></p></a>
</div>

@section Scripts {
    @Scripts.Render("~/bundles/jqueryval")
}
